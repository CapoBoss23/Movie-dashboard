    "    directors=directors.sort_values(by=['Film Prodotti'],ascending=False)\n",
    "    directors=pd.merge(directors,filtred_film,how='left',left_on=['Registi'],right_on=['director'])\n",
    "    directors=directors.drop_duplicates(subset=['Registi'])\n",
    "    directorsTop5=directors.head(slider)   \n",
    "\n",
    "    if (ordinamento==RadioItem1):\n",

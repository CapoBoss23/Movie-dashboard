   "source": [
    "#---ALGORITHM TO FIND AVERAGE PROFIT PER FILM FOR EACH PRODUCTION HOUSE BY CREATING A NEW DATAFRAME---------------------------------------------------\n",
    "\n",
    "profit_df=pd.DataFrame()\n",
    "profit_df['anni']=film.year.unique()\n",
    "\n",
    "for compagnia in company_list_nomi:\n",
    "    temp=film\n",
    "    media_list=[]\n",
    "    temp=temp.loc[temp['company'] == compagnia]\n",
    "    for anno in film.year.unique():\n",
    "        if anno in temp.year.unique():  \n",
    "            temp2=temp   \n",
    "            temp2=temp2.loc[temp2['year']== anno]   \n",
    "            media=temp2['profit'].mean()\n",
    "            media=round(media,0)\n",
    "            media_list.append(media)\n",
    "        else:\n",
    "            media_list.append(np.nan)\n",
    "    profit_df[compagnia]=media_list\n",
    "profit_df=profit_df.interpolate(method='linear', order=1) # linear interpolation\n",
    "profit_df.fillna(0,inplace=True)"
   ]
  },

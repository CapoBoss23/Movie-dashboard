    "\n",
    "    Director_bar.update_layout(plot_bgcolor=bgcolor,paper_bgcolor=bgcolor,yaxis_title=None,title_y=0.85)\n",
    "\n",
    "\n",
    "    return Director_bar\n",
    "\n",
    "\n",
    "#--GRAPH-2----------------------------------------------------------------------------------------------------------------\n",
    "\n",
    "@app.callback(\n",
    "              Output('writer_bar',  'figure'),\n",
    "              Input('genre_dropdown', 'value'),\n",
    "              Input('slider', 'value'),\n",
    "              Input('ordinamento', 'value'))\n",
    "\n",
    "def update_writer_bar(genre_dropdown,slider,ordinamento):\n",
    "\n",
    "\n",
    "    if genre_dropdown in film.genre.unique():\n",
    "        filtred_film=film[film.genre == genre_dropdown] \n",
    "    else:\n",
    "        filtred_film=film\n",
    "\n",
    "    writer_name=pd.DataFrame()\n",
    "    writer_name=filtred_film['writer']\n",
    "    writer_name=writer_name.to_frame()\n",
    "    writer_name.columns=['Sceneggiatori']\n",
    "    writers=writer_name.groupby(['Sceneggiatori']).size().reset_index(name='Film Realizzati')\n",
    "    writers=writers.sort_values(by=['Film Realizzati'],ascending=False)\n",
    "    writers=pd.merge(writers,filtred_film,how='left',left_on=['Sceneggiatori'],right_on=['writer'])\n",
    "    writers=writers.drop_duplicates(subset=['Sceneggiatori'])\n",
    "\n",
    "\n",
    "    writersTop5=writers.head(slider)\n",

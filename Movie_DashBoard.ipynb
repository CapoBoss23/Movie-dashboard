    "film = film[film.director != 'Directors'] # remove director info in Directors (that are film with more than one director)\n",
    "\n",
    "film=film.dropna(subset=['gross','budget']) # remove rows following a deletion policy\n",
    "film['profit']= film['gross'] - film['budget'] # for every sample, profit is created"
   ]

    "\n",
    "def update_director_bar(genre_dropdown,slider,ordinamento):\n",
    "\n",
    "\n",
    "   \n",
    "    if genre_dropdown in film.genre.unique():\n",
    "        filtred_film=film[film.genre == genre_dropdown] \n",
    "    else:\n",
    "        filtred_film=film\n",
    "\n",
    "\n",
    "    director_name=pd.DataFrame()\n",
    "    director_name=filtred_film['director']\n",
    "    director_name=director_name.to_frame()\n",
    "    director_name.columns=['Registi']\n",

    "#---ALGORITHM TO FIND AVERAGE DURATION FOR FILM BY GENRE BY CREATING A NEW DATAFRAME---------------------------------------------------\n",
    "\n",
    "runtime_genre_df=pd.DataFrame()\n",
    "runtime_genre_df['anni']=film.year.unique()\n",
    "\n",
    "for genere in ['Commedia','Azione','Drammatico','Giallo', 'Biografia', 'Avventura','Animazione','Horror','Fantasy']:\n",
    "    temp=film\n",
    "    media_list=[]\n",
    "    temp=temp.loc[temp['genre'] == genere]\n",
    "    for anno in film.year.unique():\n",
    "        if anno in temp.year.unique():\n",
    "            temp2=temp   \n",
    "            temp2=temp2.loc[temp2['year']== anno]   \n",
    "            media=temp2['runtime'].mean()\n",
    "            media=round(media,0)\n",
    "            media_list.append(media)\n",
    "        else:\n",
    "            media_list.append(np.nan)\n",
    "    runtime_genre_df[genere]=media_list\n",
    "runtime_genre_df=runtime_genre_df.interpolate(method='linear', order=1) # linear interpolation"
   ]

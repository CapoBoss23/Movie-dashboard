    "# A DICTIONARY IS DEFINED TO UNIFORM THE RATINGS ACCORDING TO THE 5 PMAA VALUES, USED FOR FILMS\n",
    "\n",
    "dict = {'R':'VM18','PG-13':'VM14','PG':'VM6','Not Rated':'NC','G':'T','Unrated':'NC','NC-17':'VM18','TV-MA':'VM18','TV-PG':'VM6','X':'VM18','Approved':'VM18','TV-14':'VM14'}\n",
    "film=film.replace({\"rating\": dict})           \n",
    "film_rating= film.dropna(subset=['rating'])    \n",
    "film_rating = film_rating.drop(film_rating[film_rating.rating == 'NC'].index)   # NC FILMS ARE REMOVED CAUSE THEY ARE NOT RATED\n",
    "film_rating=film_rating[['rating','company']]  \n",
    "\n",
    "df_rating_plot= pd.DataFrame()\n",
    "df_rating_plot=df_rating_plot.assign(rating= ['T','VM6','VM14','VM18'])\n",
    "rating_list=[0, 0, 0, 0]  \n",
    "\n",
    "for company in company_list_nomi:\n",
    "    rating_list=[0, 0, 0, 0] \n",
    "    for row in film_rating.itertuples():  \n",
    "        if(row.company == company):   \n",
    "            if(row.rating == 'T'):\n",
    "                rating_list[0]= rating_list[0]+1\n",
    "            elif(row.rating == 'VM6'):\n",
    "                rating_list[1]= rating_list[1]+1\n",
    "            elif(row.rating == 'VM14'):\n",
    "                rating_list[2]= rating_list[2]+1\n",
    "            if(row.rating == 'VM18'):\n",
    "                rating_list[3]= rating_list[3]+1\n",
    "\n",
    "  \n",
    "    df_rating_plot=df_rating_plot.assign(company= rating_list)\n",
    "    df_rating_plot.rename(columns={'company':company}, inplace= True)"
   ]
  },
